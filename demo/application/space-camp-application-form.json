{
    "type": "object",
    "id": "space-camp-application",
    "$schema": "http://json-schema.org/draft-03/schema#",
    "label": "Space Camp Scholarship Application",
    "description": "Please provide as much detail as possible",
    "canClose": true,
    "links": [
      {
        "rel": "self",
        "label": "Apply",
        "href": "http://localhost:8080/223423423342",
        "method": "PUT"
      }
    ],
    "additionalProperties": false,
    "properties": {
      "title": {
        "label": "Title",
        "id": "order1",
        "type": "string",
        "required": true,
        "error-message": "letters only!",
        "autoValidate": true,
        "format": "dropdown",
        "enum": ["Dr", "Mr", "Mrs", "Ms"]
      },
      "firstName": {
        "label": "First name",
        "id": "order2",
        "type": "string",
        "required": true,
        "errorMessage": "letters only!",
        "description": "John"
      },
      "surname": {
        "label": "Surname",
        "id": "order3",
        "type": "string",
        "required": true,
        "description": "Appleseed"
      },
      "age": {
        "label": "Age",
        "id": "order8",
        "type": "integer",
        "maximum": 20,
        "minimum": 5,
        "multipleOf": 5
      },
      "email": {
        "label": "Email",
        "id": "order4",
        "type": "string",
        "format": "email",
        "required": true,
        "description": "example@domain.com"
      },
      "phone": {
        "label": "Telephone",
        "id": "order5",
        "type": "string"
      },
      "message": {
        "label": "Experience",
        "id": "order6",
        "type": "string",
        "format": "textarea",
        "required": false,
        "maxLength": 100
      },
      "checkbox": {
        "label": "Check this",
        "id": "order7",
        "type": "boolean"
      },
      "radio": {
        "label": "Radio",
        "id": "order8",
        "type": "string",
        "required": true,
        "error-message": "letters only!",
        "autoValidate": true,
        "format": "radioGroup",
        "enum": ["Option 1", "Option 2", "Option 3"]
      }
    },
    "allOf": [
      {
        "if": {
          "properties": {
            "title": {
              "const": "Dr"
            }
          }
        },
        "then": {
          "properties": {
            "age": {
              "maximum": 20
            },
            "message": {
              "hidden": false
            }
          }
        }
      },
      {
        "if": {
          "properties": {
            "title": {
              "const": "Mr"
            }
          }
        },
        "then": {
          "properties": {
            "age": {
              "maximum": 90
            },
            "message": {
              "hidden": true
            }
          }
        }
      }
    ]
  }