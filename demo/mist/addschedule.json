{
    "jsonSchema": {
        "title": "Add schedule form",
        "description": "A form for adding a schedule",
        "type": "object",
        "required": [
            "name",
            "resource",
            "scheduleType"
        ],
        "properties": {
            "name": {
            "type": "string",
            "title": "Name",
            "default": "Chuck"
            },
            "description": {
            "type": "string",
            "title": "Description"
            },
            "scheduleType": {
            "type": "string",
            "title": "Schedule Type",
            "enum": [
                "One Off",
                "Interval",
                "Crontab"
            ]
            },
            "resource": {
            "type": "string",
            "title": "Resource",
            "enum": [
                "Machine",
                "Volume",
                "Network",
                "Cluster"
            ]
            }
        },
        "allOf": [
            {
            "if": {
                "properties": {
                "scheduleType": {
                    "const": "One Off"
                }
                }
            },
            "then": {
                "properties": {
                "scheduleEntry": {
                    "type": "string",
                    "format": "date-time",
                    "title": "Schedule Entry"
                }
                },
                "required": [
                "scheduleEntry"
                ]
            }
            },
            {
            "if": {
                "properties": {
                "scheduleType": {
                    "const": "Interval"
                }
                }
            },
            "then": {
                "properties": {
                "interval": {
                    "type": "string",
                    "title": "Interval"
                },
                "period": {
                    "type":"string",
                    "title": "Period",
                    "enum":[
                        "mins",
                        "hours",
                        "days"
                    ]
                }
                },
                "required": [
                "interval",
                "period"
                ]
            }
            },
            {
            "if": {
                "properties": {
                "scheduleType": {
                    "const": "Crontab"
                }
                }
            },
            "then": {
                "properties": {
                "crontab": {
                    "type": "string",
                    "title": "Crontab"
                }
                },
                "required": [
                "crontab"
                ]
            }
            },
            {
            "if": {
                "properties": {
                "resource": {
                    "const": "Machine"
                }
                }
            },
            "then": {
                "properties": {
                "action": {
                    "type": "string",
                    "title": "Action",
                    "enum": [
                    "Create",
                    "Destroy",
                    "Reboot"
                    ]
                },
                "selectors": {
                    "type": "array",
                    "title": "A multiple choices list",
                    "items": {
                        "type": "string",
                        "enum": [
                        "foo",
                        "bar",
                        "fuzz",
                        "qux"
                        ]
                    },
                    "uniqueItems": true
                }
                },
                "required": [
                "action",
                "selectors"
                ]
            }
            },
            {
            "if": {
                "properties": {
                "resource": {
                    "const": "Volume"
                }
                }
            },
            "then": {
                "properties": {
                "action": {
                    "type": "string",
                    "title": "Action",
                    "enum": [
                    "Delete"
                    ]
                },
                "selectors": {
                    "type": "array",
                    "title": "A multiple choices list",
                    "items": {
                        "type": "string",
                        "enum": [
                        "foo",
                        "bar",
                        "fuzz",
                        "qux"
                        ]
                    },
                    "uniqueItems": true
                }
                },
                "required": [
                "action",
                "selectors"
                ]
            }
            },
            {
            "if": {
                "properties": {
                "resource": {
                    "const": "Network"
                }
                }
            },
            "then": {
                "properties": {
                "action": {
                    "type": "string",
                    "title": "Action",
                    "enum": [
                    "Delete"
                    ]
                },
                "selectors": {
                    "type": "array",
                    "title": "A multiple choices list",
                    "items": {
                        "type": "string",
                        "enum": [
                        "foo",
                        "bar",
                        "fuzz",
                        "qux"
                        ]
                    },
                    "uniqueItems": true
                }
                },
                "required": [
                "action",
                "selectors"
                ]
            }
            },
            {
            "if": {
                "properties": {
                "resource": {
                    "const": "Cluster"
                }
                }
            },
            "then": {
                "properties": {
                "action": {
                    "type": "string",
                    "title": "Action",
                    "enum": [
                    "Delete"
                    ]
                },
                "selectors": {
                    "type": "array",
                    "title": "A multiple choices list",
                    "items": {
                        "type": "string",
                        "enum": [
                        "foo",
                        "bar",
                        "fuzz",
                        "qux"
                        ]
                    },
                    "uniqueItems": true
                }
                },
                "required": [
                "action",
                "selectors"
                ]
            }
            }
        ]
    },
    "uiSchema": {
        "private": {
            "ui:widget": "textarea",
            "ui:upload": true,
            "ui:placeholder": "Paste your private key material",
            "ui:options": {
              "style": "font-family:monospace; font-size: 10px; width: 420px; min-height:200px; max-height:400px;"
          }

        },
        "action": {
            "ui:widget": "radio"
        },
        "selectors": {
            "ui:widget": "checkboxes"
        }
    },
    "formData": {
        "name": "test schedule",
        "resource": "machine"
    }
}