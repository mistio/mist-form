{
  "type": "object",
  "id": "add-key-form",
  "$schema": "http://json-schema.org/draft-03/schema#",
  "label": "Add Key",
  "description": "You can generate or upload a key.",
  "submitButtonLabel": "Add",
  "canClose": false,
  "additionalProperties": false,
  "properties": {
    "name": {
      "label": "Name",
      "id": "name",
      "type": "string",
      "alwaysFloatLabel": true,
      "error-message": "Please enter a unique key's name",
      "helpText": "Add your private key in openssh format, or use the generator to create one for you.",
      "helpUrl": "http://docs.mist.io/article/34-importing-your-ssh-keys-in-mist-io",
      "required": true
    },
    "privateKey": {
      "label": "Private Key",
      "id": "privateKey",
      "required": true,
      "type": "string",
      "format": "textarea",
      "error-message": "Please enter private key"
    }
  }
}
