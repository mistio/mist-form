{
  "type": "object",
  "id": "space-camp-application",
  "$schema": "http://json-schema.org/draft-03/schema#",
  "label": "Space Camp Scholarship Application",
  "description": "Please provide as much detail as possible",
  "noClose": true,
  "links": [
    {
      "rel": "self",
      "label": "Apply",
      "href": "http://localhost:8080/223423423342",
      "method": "PUT"
    }
  ],
  "additionalProperties": false,
  "properties": {
    "title": {
      "label": "Title",
      "id": "order1",
      "fieldType": "string",
      "required": true,
      "autoValidate": true,
      "enum": ["Dr", "Mr", "Mrs", "Ms"]
    },
    "firstName": {
      "label": "First name",
      "id": "order2",
      "fieldType": "string",
      "required": true,
      "errorMessage": "letters only!",
      "description": "John"
    },
    "surname": {
      "label": "Surname",
      "id": "order3",
      "fieldType": "string",
      "required": true,
      "description": "Appleseed"
    },
    "email": {
      "label": "Email",
      "id": "order4",
      "fieldType": "string",
      "type": "email",
      "required": true,
      "description": "example@domain.com"
    },
    "phone": {
      "label": "Telephone",
      "id": "order5",
      "fieldType": "string"
    },
    "message": {
      "label": "Experience",
      "id": "order6",
      "fieldType": "textarea",
      "format": "textarea",
      "required": false,
      "maxLength": 100
    },
    "checkbox": {
      "label": "Check this",
      "id": "order7",
      "fieldType": "boolean"
    }
  }
}
