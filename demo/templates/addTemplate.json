{
  "type": "object",
  "id": "add-template-form",
  "$schema": "http://json-schema.org/draft-03/schema#",
  "label": "Add Template",
  "description": "Only TOSCA based templates are currently supported.",
  "submitButtonLabel": "Add",
  "canClose": false,
  "additionalProperties": false,
  "properties": {
    "catalogue": {
      "label": "Catalogue Templates",
      "id": "catalogue",
      "type": "string",
      "enum": ["Kubernetes blueprint", "Cloudify Blueprint example"],
      "alwaysFloatLabel": true,
      "description": "You can optionally select from our template catalogue."
    },
    "name": {
      "label": "Template Name",
      "id": "name",
      "type": "string",
      "required": true,
      "error-message": "Please enter template's name"
    },
    "description": {
      "label": "Template Description",
      "id": "description",
      "description": "Please enter template's description",
      "type": "string"
    },
    "type": {
      "label": "Type",
      "id": "type",
      "description": "Please enter template's exec_type",
      "required": true,
      "type": "string",
      "enum": ["Cloudify Blueprint"]
    },
    "location_type": {
      "id": "location_type",
      "type": "string",
      "description": "Please enter template's location_type",
      "format": "radioGroup",
      "enum": ["Git", "URL", "Inline"]
    },
    "gitRepo": {
      "label": "Git Repo",
      "id": "gitRepo",
      "type": "string",
      "required": true,
      "value": "https://github.com/owner/repo",
      "description": "Please enter a git repo",
      "error-message": "Please enter a git repo"
    },
    "entryPoint": {
      "label": "Entry point",
      "id": "entryPoint",
      "type": "string",
      "required": true,
      "description": "Please enter entry point",
      "error-message": "Please enter entry point"
    },
    "url": {
      "label": "Url",
      "id": "url",
      "type": "string",
      "required": true,
      "value": "http://",
      "description": "Please enter a url",
      "error-message": "Please enter a url"
    },
    "template": {
      "label": "Script",
      "id": "template",
      "type": "string",
      "format": "textarea",
      "required": true,
      "helpText": "Please enter inline template",
      "error-message": "Please enter inline template",
      "hidden": true
    },
    "runAsOwner": {
      "label": "Let run as owner",
      "id": "runAsOwner",
      "type": "boolean",
      "description": "Enable to allow team members to run this template with owner rights."
    }
  }
}
