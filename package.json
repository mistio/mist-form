{
  "name": "@mistio/mist-form",
  "version": "0.2.0",
  "description": "Webcomponent mist-form following open-wc recommendations",
  "author": "Golfo Vasiliou <golfo@mist.io>",
  "license": "Apache-2.0",
  "main": "index.js",
  "module": "index.js",
  "scripts": {
    "start": "es-dev-server --app-index demo/index.html --node-resolve --open --watch",
    "lint:eslint": "eslint --ext .js,.html . --ignore-path .gitignore",
    "format:eslint": "eslint --ext .js,.html . --fix --ignore-path .gitignore",
    "lint:prettier": "prettier \"**/*.js\" --check --ignore-path .gitignore",
    "format:prettier": "prettier \"**/*.js\" --write --ignore-path .gitignore",
    "lint": "npm run lint:eslint && npm run lint:prettier",
    "format": "npm run format:eslint && npm run format:prettier",
    "test": "karma start --coverage",
    "test:cypress": "./node_modules/.bin/cypress open",
    "test:watch": "karma start --auto-watch=true --single-run=false",
    "storybook": "start-storybook",
    "storybook:build": "build-storybook",
    "ci": "start-server-and-test 'npm start' http://localhost:8000 '$(npm bin)/cypress run --browser chrome'"
  },
  "dependencies": {
    "@open-wc/lit-helpers": "^0.3.11",
    "lit-element": "^2.2.1",
    "lit-html": "^1.1.2"
  },
  "devDependencies": {
    "@open-wc/demoing-storybook": "^2.0.0",
    "@open-wc/eslint-config": "^2.0.0",
    "@open-wc/testing": "^2.0.0",
    "@open-wc/testing-karma": "^3.0.0",
    "@polymer/iron-ajax": "^3.0.1",
    "@polymer/iron-icons": "^3.0.1",
    "@polymer/iron-selector": "^3.0.1",
    "@polymer/paper-button": "^3.0.1",
    "@polymer/paper-checkbox": "^3.1.0",
    "@polymer/paper-dropdown-menu": "^3.1.0",
    "@polymer/paper-icon-button": "^3.0.2",
    "@polymer/paper-input": "^3.2.1",
    "@polymer/paper-item": "^3.0.1",
    "@polymer/paper-listbox": "^3.0.1",
    "@polymer/paper-radio-group": "^3.0.1",
    "@polymer/paper-spinner": "^3.0.2",
    "@polymer/paper-styles": "^3.0.1",
    "@polymer/paper-toggle-button": "^3.0.1",
    "cypress": "^6.8.0",
    "deepmerge": "^3.2.0",
    "es-dev-server": "^1.23.0",
    "eslint": "^6.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-cypress": "^2.11.2",
    "husky": "^1.0.0",
    "lint-staged": "^10.0.0",
    "prettier": "^2.0.4",
    "start-server-and-test": "^1.12.1"
  },
  "eslintConfig": {
    "rules": {
      "no-console": [
        1,
        {
          "allow": [
            "info",
            "warn",
            "error",
            "exception",
            "log"
          ]
        }
      ]
    },
    "extends": [
      "@open-wc/eslint-config",
      "eslint-config-prettier",
      "plugin:cypress/recommended"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "arrowParens": "avoid"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "directories": {
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "git@gitlab.ops.mist.io:mistio/mist-form.git"
  },
  "keywords": [
    "jsonschema",
    "form",
    "mist"
  ]
}
